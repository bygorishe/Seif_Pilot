<Window x:Class="Seif_Pilot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Seif_Pilot"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" VerticalAlignment="Top" Background="AntiqueWhite" >
            <TextBlock Text="N ="/>
            <TextBox Width="50" Text="4" x:Name="NBox" Background="AntiqueWhite" BorderThickness="0"/>
            <MenuItem Header="Restart" Click="Restart"/>
        </Menu>
        <Grid x:Name="MainGrid" Grid.Row="1"/>
    </Grid>
</Window>
